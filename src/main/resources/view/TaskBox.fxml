<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.geometry.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="CENTER_LEFT" styleClass="taskBox" type="HBox" xmlns="http://javafx.com/javafx/8.0.40" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <CheckBox fx:id="checkbox" focusTraversable="false" mnemonicParsing="false" text="">
         <cursor>
            <Cursor fx:constant="HAND" />
         </cursor></CheckBox>
      <Label fx:id="index" focusTraversable="false" text="Index" />
      <Label fx:id="recurringIcon" focusTraversable="false" text="Recurring" />
      <Label fx:id="description" focusTraversable="false" text="Description" />
      <Label fx:id="timeAndDate" focusTraversable="false" text="Time and Date" />
      <HBox nodeOrientation="LEFT_TO_RIGHT" HBox.hgrow="ALWAYS">
         <children>
            <Button fx:id="delete" alignment="TOP_RIGHT" contentDisplay="CENTER" focusTraversable="false" graphicTextGap="0.0" mnemonicParsing="false" text="X" textAlignment="CENTER">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
      </HBox>
   </children>
</fx:root>
